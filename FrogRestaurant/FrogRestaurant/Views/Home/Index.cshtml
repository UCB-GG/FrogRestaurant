@model List<PersonViewModel>
@{
    ViewData["Title"] = "Home Page";
}


<h1 class="text-center my-2">Заявки в ресторант Frog</h1>
<h3 class="text-center my-2">Клиенти</h3>

<div class=" my-2">
    <a asp-controller="Home" asp-action="NewPerson" class="btn btn-warning">Нов клиент</a>
</div>

@foreach (PersonViewModel person in Model)
{
    <div class="my-2">
        @person.FoodItemDescription - @person.PersonName
    </div>
}
